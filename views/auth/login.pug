extends ../layout/index

block container
    div.py-10
        h1.text-4xl.my-8.font-extrabold.text-center Real   
            span.font-normal Estate 
        h2.text-center.text-2xl.font-extrabold= page

        .mt-5.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow 
                form.space-y-4        
                    div                        
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='email') E-mail 
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder='Your e-mail' type='email' name='email') 
                    div                        
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='password') Password 
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder='Your Password' type='password' name='password') 

                    div.flex.items-center.justify-between.pt-6 
                        a.text-gray-500.text-xs(href="/auth/register") You do not have an account? Create account 
                        a.text-gray-500.text-xs(href="/auth/forget-password") I forgot my password 
                    
                    input(class="w-full bg-indigo-600 hover:bg-indigo-800 text-white font-bold py-3 cursor-pointer" type="submit" value="Sign In")
