extends ../layout/index

block container
    div.py-2
        h1.text-4xl.my-3.font-extrabold.text-center Real   
            span.font-normal Estate 
        h2.text-center.text-2xl.font-extrabold= page

        if errors
            div(class='max-w-md mx-auto my-8')
                each error in errors 
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg 

        .mt-5.mx-auto.max-w-md 
            .bg-white.py-6.px-4.shadow 
                form.space-y-4(method="POST" action="/auth/register" novalidate)        
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='name') Name 
                        input#name.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder='Your Name' type='text' name='name' value= user ? user.name : '' )                  
                    div                        
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='email') E-mail 
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder='Your e-mail' type='email' name='email' value= user ? user.email : '') 
                    div                        
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='password') Password 
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder='Your Password' type='password' name='password') 
                    div                        
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='repeat_password') Repeat Password 
                        input#repeat_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder='Repeat Your Password' type='password' name='repeat_password') 

                    div.flex.items-center.justify-between.pt-6 
                        a.text-gray-500.text-xs(href="/auth/login") Already have an Account? Sign in 
                        a.text-gray-500.text-xs(href="/auth/forget-password") I forgot my password 

                    input(class="w-full bg-indigo-600 hover:bg-indigo-800 text-white font-bold py-3 cursor-pointer" type="submit" value="Create Account")
